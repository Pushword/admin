{% extends '@SonataAdmin/CRUD/base_list_field.html.twig' %}

{% block field %}
  {% if object.isPublished == 0 %}
    <span class="badge badge-info" title="{{ object.publishedAt|format_datetime }}">{{ 'admin.draft'|trans }}</span>
  {% elseif object.metaRobots != '' %}
    <span class="badge" title="{{ object.metaRobots }}"><i class="fa fa-eye-slash"></i></span>
  {% endif %}
  <span style="color:#333; font-weight:400; font-size:90%">
    {{ object.host ? object.host ~ ' â€º ' : '' }}{{ object.slug }}</span>
  <br>
  <span style="font-size:110%;font-weight:600">
    {{ object.h1 is empty ? object.title : object.h1|striptags }}</span>
  <br>
  {{ object.tag != '' ? '<span style="font-weight:200; color:#94a3b8; display:inline-block; margin-right:4px">#</span>' : '' }}
  {% for tag in object.tagList %}
    <span class="badge" style="background:white; font-weight:400; color:#333;box-shadow: 0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px -1px rgb(0 0 0 / 0.1);
 margin-right:4px">{{ tag }}</span>
  {% endfor %}
{% endblock %}
