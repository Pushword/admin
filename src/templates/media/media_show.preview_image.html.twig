
<div class=row>
    <div class=col-md-6>
        <a href="{{ media|image('default') }}">
            <img src="{{ media|image('md') }}?{{ random() }}" style="max-width:100%">
        </a>
     </div>
     <div class=col-md-6>
         Chemin:<br>
         <code>{{ media|image('default') }}</code>
         <br><br>Markdown:<br>
         <pre>![{{ media.name|replace({'[': '', ']': ''}) }}]({{ media|image('default') }})</pre>

         Couleur dominante:<br>
         <pre style="background-color:{{media.getMainColor}};color:{{media.mainColorOpposite}}">{{media.getMainColor}}</pre>

    </div>
</div>
