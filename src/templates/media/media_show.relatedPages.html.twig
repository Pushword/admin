{% if mainImage.count > 0 %}
    <h4>Via l'illustration principale</h4>
    <ul>
        {% for page in mainImage %}
            {% block item %}
                <li><a href="{{ path('admin_app_page_edit', {'id': page.id}) }}">{{ pw(page).h1|raw }}</a></li>
            {% endblock %}
        {% endfor %}
    </ul>
{% endif %}

{% if gallery.count > 0 %}
    <h4>Via une gallerie</h4>
    <ul>
        {% for page_has_media in gallery %}
            {% block item2 %}
                <li><a href="{{ path('admin_app_page_edit', {'id': page_has_media.page.id}) }}">{{ pw(page_has_media.page).h1|raw }}</a></li>
            {% endblock %}
        {% endfor %}
    </ul>
{% endif %}

{% if content %}
    <h4>Via le contenu</h4>
    <ul>
        {% for page in content %}
            {% block item3 %}
                <li><a href="{{ path('admin_app_page_edit', {'id': page.id}) }}">{{ pw(page).h1|raw }}</a></li>
            {% endblock %}
        {% endfor %}
    </ul>
{% endif %}
